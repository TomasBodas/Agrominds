
@{
    ViewBag.Title = "Register";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background: linear-gradient(180deg, #e8f5e9, #c8e6c9);
        }

        .register-container {
            width: 360px;
            padding: 30px;
            background-color: #ffffff;
            border-radius: 12px;
            border: 1px solid #a5d6a7;
            box-shadow: 0 4px 12px rgba(46, 125, 50, 0.2);
        }

            .register-container h2 {
                text-align: center;
                margin-bottom: 20px;
                color: #2e7d32;
                font-weight: 800;
                font-size: 32px;
                letter-spacing: 1px;
                text-shadow: 1px 1px 4px rgba(46, 125, 50, 0.2);
            }

            .register-container label {
                display: block;
                margin-top: 10px;
                font-weight: 600;
                color: #1b5e20;
            }

            .register-container input {
                width: 100%;
                padding: 10px;
                margin-top: 5px;
                margin-bottom: 12px;
                border: 2px solid #c8e6c9;
                border-radius: 8px;
                box-sizing: border-box;
                transition: all 0.3s ease;
            }

                .register-container input:focus {
                    border-color: #66bb6a;
                    box-shadow: 0 0 5px rgba(102, 187, 106, 0.5);
                    outline: none;
                }

            .register-container button {
                width: 100%;
                padding: 10px;
                background-color: #2e7d32;
                color: #fff;
                border: none;
                border-radius: 8px;
                cursor: pointer;
                transition: background-color 0.3s ease, transform 0.1s ease;
                font-weight: bold;
                letter-spacing: 0.5px;
                margin-top: 10px;
            }

                .register-container button:hover {
                    background-color: #1b5e20;
                    transform: translateY(-1px);
                }

            .register-container a {
                text-decoration: none;
                color: #388e3c;
                text-align: center;
                display: block;
                margin-top: 12px;
                font-weight: 600;
                transition: color 0.3s ease;
            }

                .register-container a:hover {
                    color: #1b5e20;
                }
    </style>

</head>
<body>
    <div class="register-container">
        <h2>AgroMinds</h2>
        @using (Html.BeginForm("Register", "Register", FormMethod.Post))
        {
            <div>
                <input type="text" name="name" placeholder="Nombre" required />
            </div>
            <div>
                <input type="text" name="surname" placeholder="Apellido" required />
            </div>
            <div>
                <input type="number" name="DNI" placeholder="DNI" required max="99999999" />
            </div>
            <div>
                <input type="email" name="Email" placeholder="Email" required />
            </div>
            <div>
                <input type="password" name="Password" placeholder="Contraseña" required />
            </div>
            <div>
                <input type="password" name="ConfirmPassword" placeholder="Repetir Contraseña" required />
                @Html.ValidationMessage("ConfirmPassword")
            </div>
            <div>
                <button type="submit">Registrarse</button>
            </div>
        }
    </div>
    <footer style="position: fixed; bottom:0; left:0; width:100%; background-color: #2E7D32; color: white; padding:10px; text-align: center;">
        ©2026 AgroMinds — Tecnología agrícola inteligente. Todos los derechos reservados.
    </footer>
</body>
</html>


