@using Services.Models
@model List<string>
<!DOCTYPE html>
<html lang="es">
@{
    ViewBag.Title = "CorruptDatabaseMessage";
    Services.Idioma.Translator translator = new Services.Idioma.Translator();
    UAIDesarrolloArquitectura.Controllers.IdiomaController lC = new UAIDesarrolloArquitectura.Controllers.IdiomaController();
    lC.InitializeController();
    Services.LanguageService service = lC.GetService();
    service.Susbcribe(translator);
    if (Services.SessionManager.IsLogged())
    {
        service.ChangeLanguage((Services.SessionManager.GetInstance.User.LanguageId).ToString());
    }
    else
    {
        if (!service.SelectedLanguageExists()) { service.ChangeLanguage("1"); }
    }
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Advertencia</title>
    <link rel="stylesheet" href="~/Content/Site.css">
    <link href="https://fonts.googleapis.com/css2?family=Chivo:wght@400;600&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: "Chivo", Arial, sans-serif;
            background-color: #f5faf5;
            margin: 0;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .message {
            background-color: #ffffff;
            border: 1px solid #a5d6a7;
            border-radius: 10px;
            padding: 30px 40px;
            box-shadow: 0 4px 12px rgba(46, 125, 50, 0.15);
            text-align: center;
            width: 600px;
            color: #1b5e20;
            margin: 80px auto;
        }

            .message h2 {
                color: #2e7d32;
                font-weight: 700;
                margin-bottom: 20px;
            }

            .message p {
                font-size: 15px;
                margin-bottom: 10px;
                color: #2e7d32;
            }

        ul {
            list-style-type: disc;
            text-align: left;
            margin: 10px auto 20px;
            padding-left: 40px;
            color: #388e3c;
            font-size: 14px;
        }

        a, input[type="submit"] {
            background-color: #2e7d32;
            color: white;
            border-radius: 5px;
            padding: 8px 14px;
            border: none;
            text-decoration: none;
            font-family: "Chivo", Arial, sans-serif;
            font-size: 14px;
            font-weight: 600;
            transition: background-color 0.3s ease, transform 0.1s ease;
        }

            a:hover, input[type="submit"]:hover {
                background-color: #1b5e20;
                cursor: pointer;
                transform: translateY(-1px);
            }

        input[type="text"] {
            width: 300px;
            border: 2px solid #c8e6c9;
            border-radius: 6px;
            padding: 8px;
            background-color: #f9fdf9;
            font-size: 14px;
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
        }

            input[type="text"]:focus {
                border-color: #66bb6a;
                box-shadow: 0 0 5px rgba(102, 187, 106, 0.5);
                outline: none;
            }

        .contenedor-botones {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 15px;
            flex-wrap: wrap;
            margin-top: 20px;
        }

        .contenedor-botones-restore {
            display: flex;
            align-items: center;
            gap: 10px;
            flex-wrap: wrap;
            justify-content: center;
        }

        nav.barra {
            background-color: #2e7d32;
            color: white;
            padding: 10px;
            text-align: center;
        }

        nav.menu-secundario {
            background-color: #388e3c;
            color: white;
            padding: 8px;
            text-align: center;
        }

        nav.barra a, nav.menu-secundario a {
            color: white;
            text-decoration: none;
            margin: 0 10px;
            font-weight: 600;
        }

        nav.barra a:hover, nav.menu-secundario a:hover {
            text-decoration: underline;
        }

        footer {
            background-color: #2e7d32;
            color: white;
            padding: 10px;
            text-align: center;
        }
    </style>
</head>

<body>
<nav class="barra">
    @if(Services.SessionManager.IsLogged())
    {
        <div id="opciones" class="opciones">
            <a href="@Url.Action("Logout","Home")">@translator.GetTraduction(service,"Logout")</a>
            <a style="display:none;" id="bitacora" href="@Url.Action("Bitacora","Bitacora")">@translator.GetTraduction(service,"Log")</a>
            <a style="display:none;" id="abmusuarios" href="@Url.Action("ABMUsuarios","ABM")">@translator.GetTraduction(service,"ManageUser")</a>
            <a style="display:none;" id="restore" href="@Url.Action("BackupRestore","Backup")">@translator.GetTraduction(service,"Restoredb")</a>
            <a style="display:none;" id="1001" href="@Url.Action("ABMIdioma","Idioma")">@translator.GetTraduction(service,"ManageLanguage")</a>
            <a style="display:none;" id="1002" href="@Url.Action("CrearPerfiles","CrearPerfiles")">@translator.GetTraduction(service,"CreateProfile")</a>
            <a style="display:none;" id="1003" href="@Url.Action("AsignarPerfil","AsignarPerfil")">@translator.GetTraduction(service,"AssignProfile")</a>
            <script type="text/javascript">
                @foreach(string permission in Services.SessionManager.GetInstance.User.permissionList)
                {
                    <text>document.getElementById('@permission').style.display='block';</text>
                }
            </script>
        </div>
        <div class="opciones">
            <p style="color:white;">@translator.GetTraduction(service,"Welcome"), @Services.SessionManager.GetInstance.User.Name</p>
        </div>
    }
    else
    {
        <a href="@Url.Action("Login","Login")">@translator.GetTraduction(service,"Login")</a>
        <a href="@Url.Action("Register","Register")">@translator.GetTraduction(service,"Register")</a>
    }
    <form>
        <select id="option" onchange="enviarValor()">
            @foreach(Services.Idioma.Language l in service.GetLanguages())
            {
                if(service.SelectedLanguage.Id==l.Id)
                {
                    <option value="@l.Id" selected>@translator.GetTraduction(service,l.Name)</option>
                }
                else
                {
                    <option value="@l.Id">@translator.GetTraduction(service,l.Name)</option>
                }
            }
        </select>
    </form>
</nav>
<header>
    <h1 style="color:#2E7D32;">AgroMinds</h1>
</header>
<nav class="menu-secundario">
    <a href="@Url.Action("Index","Home")">@translator.GetTraduction(service,"Main")</a>
    <a href="@Url.Action("Plans","Home")">@translator.GetTraduction(service,"Plans")</a>
    <a href="@Url.Action("Servicios","Home")">@translator.GetTraduction(service,"Services")</a>
    <a href="@Url.Action("Nosotros","Home")">@translator.GetTraduction(service,"AboutUs")</a>
    <a href="@Url.Action("Contact","Home")">@translator.GetTraduction(service,"Contact")</a>
</nav>
<div class="message">
    @if (Services.SessionManager.GetInstance != null && Services.SessionManager.GetInstance.User.Name == "webmaster")
    {
        <h2>@translator.GetTraduction(service, "Corruptdb")</h2>
        <p>@translator.GetTraduction(service, "ErrorList"):</p>
        <ul>
            @if (Model != null)
            {
                foreach (var error in Model)
                {
                    <li>@error</li>
                }
            }
        </ul>
        <p>@translator.GetTraduction(service, "Howtoproceed")</p>

        <div class="contenedor-botones">
            <form action="/Backup/Restore" method="post">
                <div class="contenedor-botones-restore">
                    <input type="hidden" name="ReturnUrl" value="@Url.Action("CorrupDatabaseMessage")" />
                    <input type="text" name="path" placeholder="@translator.GetTraduction(service, "Corruptdb")" required />
                    <input type="submit" value="@translator.GetTraduction(service, "Restore")" />
                </div>
            </form>

            <div>
                <a href="@Url.Action("SetCheckDigits", "Backup")">@translator.GetTraduction(service, "CalculateDigit")</a>
            </div>
            <div>
                <a href="@Url.Action("Login", "Login")">@translator.GetTraduction(service, "Leave")</a>
            </div>
        </div>
    }
    else
    {
        <h2>AgroMinds está en mantenimiento</h2>
        <p>Estamos realizando mejoras para brindarte una mejor experiencia en nuestros servicios agrícolas inteligentes.</p>
        <p>Por favor, volvé a intentarlo más tarde.</p>
        <a href="@Url.Action("Login", "Login")">@translator.GetTraduction(service, "Leave")</a>
    }
</div>
<footer>©2026 AgroMinds — Tecnología agrícola inteligente. Todos los derechos reservados.</footer>
</body>
</html>
