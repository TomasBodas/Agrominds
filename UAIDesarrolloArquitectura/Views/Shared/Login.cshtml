<!DOCTYPE html>
<html lang="en">
@model UAIDesarrolloArquitectura.Models.ViewModel.LoginViewModel
@{ 
    ViewBag.Title = "Login";
    Services.Idioma.Translator translator = new Services.Idioma.Translator();
    UAIDesarrolloArquitectura.Controllers.IdiomaController lC = new UAIDesarrolloArquitectura.Controllers.IdiomaController();
    lC.InitializeController();
    Services.LanguageService service = lC.GetService();
    service.Susbcribe(translator);
    if (Services.SessionManager.IsLogged())
    {
        service.ChangeLanguage((Services.SessionManager.GetInstance.User.LanguageId).ToString());
    }
    else
    {
        if (!service.SelectedLanguageExists()) { service.ChangeLanguage("1"); }
    }
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background: linear-gradient(180deg, #e8f5e9, #c8e6c9); /* Verde suave */
        }

        .login-container {
            width: 320px;
            padding: 25px;
            background-color: #ffffff;
            border-radius: 12px;
            border: 1px solid #a5d6a7;
            box-shadow: 0 4px 12px rgba(46, 125, 50, 0.2);
            display: flex;
            flex-direction: column;
        }

            .login-container h2 {
                text-align: center;
                margin-bottom: 20px;
                color: #2e7d32;
                font-weight: 800;
                font-size: 26px; /* 🔼 Aumentado de 26px a 36px */
                letter-spacing: 1px;
                text-shadow: 1px 1px 4px rgba(46, 125, 50, 0.2);
            }

            .login-container input {
                width: 100%;
                padding: 10px;
                margin-bottom: 12px;
                border: 2px solid #c8e6c9;
                border-radius: 8px;
                box-sizing: border-box;
                transition: all 0.3s ease;
            }

                .login-container input:focus {
                    border-color: #66bb6a;
                    box-shadow: 0 0 5px rgba(102, 187, 106, 0.5);
                    outline: none;
                }

            .login-container button {
                width: 100%;
                padding: 10px;
                background-color: #2e7d32; /* Verde intenso */
                color: #fff;
                border: none;
                border-radius: 8px;
                cursor: pointer;
                transition: background-color 0.3s ease, transform 0.1s ease;
                font-weight: bold;
                letter-spacing: 0.5px;
            }

                .login-container button:hover {
                    background-color: #1b5e20;
                    transform: translateY(-1px);
                }

            .login-container a {
                text-decoration: none;
                color: #388e3c;
                text-align: center;
                display: block;
                margin-top: 12px;
                font-weight: 600;
                transition: color 0.3s ease;
            }

                .login-container a:hover {
                    color: #1b5e20;
                }

        .validation-error {
            display: none;
            color: #1b5e20;
            font-weight: bold;
            background-color: #e8f5e9;
            border: 1px solid #a5d6a7;
            padding: 10px;
            border-radius: 5px;
            margin-top: 10px;
            margin-bottom: 10px;
            font-size: 15px;
        }

        .field-validation-error {
            display: block;
        }
    </style>

</head>
<body>
    @using (Html.BeginForm("Login", "Login", FormMethod.Post))
    {
<div class="login-container">
    <a href="@Url.Action("Index", "Home")"><h2>AgroMinds</h2></a>
    <form id="login-form">
        <div>
            @Html.LabelFor(m => m.Email)
            @Html.TextBoxFor(m => m.Email, new { @type = "Email", @placeholder = "Email", @required = "required", @id = "Email" })
            @Html.ValidationMessageFor(m => m.Email)
        </div>
        <div>
            @Html.LabelFor(m => m.Password)
            @Html.PasswordFor(m => m.Password, new { @placeholder = @translator.GetTraduction(service, "Password"), @required = "required" })
            @Html.ValidationMessageFor(m => m.Password)
        </div>
        @Html.ValidationMessage("MissingUser", new { @class = "validation-error" })
    <button type="submit">@translator.GetTraduction(service, "Login")</button>
        <br />
        @Html.ActionLink("Registrarse", "Register", "Register")
        <a href="#" id="forgot-link">@translator.GetTraduction(service, "ForgotPassword")</a>
    </form>
</div>}
 <footer style="position: fixed; bottom:0; left:0; width:100%; background-color: #2E7D32; color: white; padding:10px; text-align: center;">
 ©2026 AgroMinds — Tecnología agrícola inteligente. Todos los derechos reservados.
 </footer>
 <script>
 (function(){
 var link=document.getElementById('forgot-link');
 if(link){ link.addEventListener('click', function(e){ e.preventDefault(); var emailInput=document.getElementById('Email'); var email = emailInput? emailInput.value.trim():''; if(!email){ email=prompt('Ingrese su email'); }
 if(!email) return; fetch('/Login/ForgotPassword',{ method:'POST', headers:{'Content-Type':'application/json'}, body: JSON.stringify({ email: email }) })
 .then(r=>r.json()).then(x=>{ alert(x.success? 'Se envió una nueva contraseña temporal a su correo.':'Error: '+(x.error||'Intente más tarde')); });
 }); }
 })();
 </script>
</body>
</html>


